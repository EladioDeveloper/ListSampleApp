    <CollectionView
        ItemsSource="{Binding Places}"
        SelectedItem="{Binding SelectedPlace}"
        SelectionMode="Single">

        <CollectionView.ItemTemplate>
            <DataTemplate>
                <SwipeView>
                    <SwipeView.RightItems>
                        <SwipeItems>
                            <SwipeItem
                                Text="Favorite"
                                IconImageSource="favorite.png"
                                BackgroundColor="Green"
                                Command="{Binding Source={x:Reference placePage}, Path=BindingContext.DeleteCommand}" 
                                CommandParameter="{Binding}" />
                        </SwipeItems>
                    </SwipeView.RightItems>
                    <SwipeView.LeftItems>
                        <SwipeItems>
                            <SwipeItem
                                Text="Delete"
                                BackgroundColor="Red"
                                Command="{Binding Source={x:Reference placePage}, Path=BindingContext.DeleteCommand}" 
                                CommandParameter="{Binding}" />
                        </SwipeItems>
                    </SwipeView.LeftItems>
                    <StackLayout Padding="1">
                        <Label Text="{Binding Name}" FontSize="Large" HorizontalOptions="StartAndExpand" />
                        <Label Text="{Binding Category}" FontSize="Small" HorizontalOptions="EndAndExpand" />
                    </StackLayout>
                </SwipeView>
            </DataTemplate>
        </CollectionView.ItemTemplate>
        
        
        
        
    </CollectionView>
</ContentPage>